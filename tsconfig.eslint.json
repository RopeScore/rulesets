{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "checkJs": true,
    "noEmit": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "./*.mjs",
    "./.*.js",
    "./data/*.json"
  ],
  "exclude": [
    "dist",
    "docs",
    "node_modules",
    "coverage",
  ],
}
